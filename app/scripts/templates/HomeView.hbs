<div class="login-form">
  <div class="panel panel-default">
    <div class="panel-body">
      <form id="form-login" action="">
        <div class="form-group">
          <label for="username">Username:</label>
          <input id="username" name="username" type="text" class="form-control" placeholder="Your name goes here..." value="{{user.name}}">
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="text" id="email" name="email" class="form-control" placeholder="Your e-mail goes here..." value="{{user.email}}">
        </div>
        <button type="submit" class="btn btn-primary">Let's Go</button>
        <button type="button" class="btn btn-danger">Another user</button>
      </form>
    </div>
  </div>
</div>